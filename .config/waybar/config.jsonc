[
{
/////////////////
/////////////////
//// TOP BAR ////
/////////////////
/////////////////

////////////
// FORMAT //
////////////

	"layer": "top",

        "position": "top", // Waybar position (top|bottom|left|right)

        "height": 10, // remove for automatic height

	"margin": 5,

        // "width": 1280,

        "spacing": 0,

	
///////////
// ORDER //
///////////


        "modules-left": [
        	 
	],

        "modules-center": [
		"power-profiles-daemon", "hyprland/workspaces", "custom/spacing", "network", "bluetooth", "pulseaudio", "backlight", "temperature", "cpu", "custom/cava", "tray", "battery","custom/spacing", "clock",	
	],

        "modules-right": [
		
	],


/////////////
// MODULES //
/////////////

"custom/Aphos": {
	"format": "Aphos"
},

"custom/spacing": {
        "format": " "
},

"hyprland/workspaces": {
        "on-click": "activate",  
        "persistent-workspaces": {
                "1": [],
                "2": [],
                "3": [],
                },
         "format": " {icon} ",
         "format-icons": {
		"1": "1",
		"2": "2",
		"3": "3",
		"urgent": "ÔÅ™",
		// "active": "ÔÜí",
		// "default": "ÔÑë"
                }
},

"custom/cava": {	
	"format": "{}",
	"exec": "~aphos/.config/waybar/cava.sh",
	"on-click": "pear-desktop",
	"tooltip": false,
},

"power-profiles-daemon": {
  "format": " {icon} ",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true,
  "format-icons": {
    "performance": "üåë",
    "balanced": "üåì",
    "power-saver": "üåî"
  }
},

"clock": {
        "format": "  üìÖ  {:%a %d/%b/%y   Û∞•î  %H:%M  }",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#EAE0D5'><b>{}</b></span>",
                              "days":       "<span color='#EAE0D5'><b>{}</b></span>",
                              "weeks":      "<span color='#C6AC8F'><b>W{}</b></span>",
                              "weekdays":   "<span color='#C6AC8F'><b>{}</b></span>",
                              "today":      "<span color='#2ec4b6'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
},

"custom/weather": {
        "exec": "curl 'https://v2.wttr.in/?format=1'",
        "interval": 3600,
        "format": "{}",
        "tooltip": false,
	"tooltip-format": "{}",	
	},

"pulseaudio": {
        "format": "{icon} {volume}%" ,
        "format-bluetooth": "Û∞Ç∞  {volume}%",
        "format-bluetooth-muted": "Û∞Ç≤  {volume}%",
        "format-muted": "Û∞ùü  {volume}%",
        "format-icons": {
            "headphone": "Û∞ãã ",
            "hands-free": "Û∞•∞ ",
            "headset": "Û∞ãé ",
            "default": ["Û∞ïø ", "Û∞ñÄ ", "Û∞ïæ "]
        },
        "states": {
                "normal": 50,
                "low": 25,
                "zero": 0
                },
        "on-click": "kitty -e pulsemixer",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ +1%"
},

"tray": {
        "icon-size": 16,
        "spacing": 11,
},

"backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû ", "Û∞Éü ", "Û∞É† "],
        "on-scroll-up": "brightnessctl set 1%-",
        "on-scroll-down": "brightnessctl set +1%"
},

"network": {
        "format-wifi": "  Û∞ñ©  {signalStrength}%",
        "format-ethernet": "  Û∞àÄ  {bandwidthDownBits}",
        "format-linked": "  Û∞àÄ  Wan",
        "format-disconnected": "  Û∞ñ™  off",
	"on-click-right": "sh -c 'if nmcli radio wifi | grep -q \"enabled\"; then nmcli radio wifi off; else nmcli radio wifi on; fi'",
        "tooltip-format": "{essid}",
	"on-click": "kitty -e nmtui",

},

"bluetooth": {
        "format": "Û∞ÇØ  {device_battery_percentage}%",
	"format-on": "Û∞ÇØ  on",
        "format-off": "Û∞Ç≤  off",
        "on-click": "kitty -e bluetui",
        "on-click-right": "bluetoothctl show | grep -q 'Powered: yes' && bluetoothctl power off || bluetoothctl power on",
	"tooltip": true ,
	"tooltip-format": "{device_alias}",
},

"temperature": {
        "critical-threshold": 75,
        "warning-threshold": 65,
        "format": "{icon}  {temperatureC}¬∞C",
        "format-icons": ["Û±ÉÉ", "Û∞îè", "Û±ÉÇ"],
        "on-click": "kitty -e btop",
	"tooltip": false
},

"cpu": {
        "format": " Û∞òö  {usage}%",
        "tooltip": true,
        "interval": 5,
        "on-click": "kitty -e btop",
},

"battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}% ",
        "format-charging": "Û∞ÇÑ  {capacity}% ",
        "format-plugged": "Û∞ö•  {capacity}% ",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "interval": 5
},

} 
]
